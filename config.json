{
  "name": "THEMENAME",
  "description": "A theme based on Bootstrap.",
  "bowerDir": "bower_components",
  "css": {
    "file" : "style.scss",
    "src": [
      "CSSSRC"
    ],
    "dest": "CSSDEST",
    "includePaths": [
      "bower_components/bootstrap-sass/assets/stylesheets/_bootstrap.scss",
      "bower_components/font-awesome/scss"
    ]
  },
  "js": {
    "file" : "script.js",
    "src": [
      "JSSRC"
    ]
  },
  "images": {
    "src": [
      "IMGSRC"
    ],
    "dest": "IMGDEST"
  },
  "fonts": {
    "src": [
      "bower_components/font-awesome/fonts/**.*"
    ],
    "dest": "FONTDEST"
  }
}
