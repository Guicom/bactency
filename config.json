{
  "name": "THEMENAME",
  "description": "A theme based on Bootstrap.",
  "bowerDir": "./bower_components",
  "css": {
    "file" : "style.scss",
    "src": [
      "CSSSRC"
    ],
    "dest": "assets/css",
    "includePaths": [
      "./bower_components/bootstrap-sass/assets/stylesheets",
      "./bower_components/font-awesome/scss"
    ]
  },
  "js": {
    "file" : "script.js",
    "src": [
      "assets/js/**/*.js"
    ]
  },
  "images": {
    "src": [
      "assets/images/**/*"
    ],
    "dest": "assets/images/"
  },
  "fonts": {
    "src": [
      "./bower_components/font-awesome/fonts/**.*"
    ],
    "dest": "./assets/fonts/"
  }
}
